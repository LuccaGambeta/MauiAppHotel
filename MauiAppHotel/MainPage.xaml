<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppHotel.MainPage"
    Title="Hotel MAUI">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🏨 Hotel MAUI"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#1F618D"
                   HorizontalOptions="Center" />

            <Button Text="Contratar Hospedagem"
                    BackgroundColor="#1F618D"
                    TextColor="White"
                    CornerRadius="20"
                    Clicked="AbrirContratacao_Clicked" />

            <Button Text="Ver Galeria de Fotos"
                    BackgroundColor="#2874A6"
                    TextColor="White"
                    CornerRadius="20"
                    Clicked="AbrirFotos_Clicked" />

            <Button Text="Sobre"
                    BackgroundColor="#117864"
                    TextColor="White"
                    CornerRadius="20"
                    Clicked="AbrirSobre_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

