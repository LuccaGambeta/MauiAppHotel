<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
    Title="Contratar Hospedagem">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="FormulÃ¡rio de Hospedagem"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#1F618D"
                   HorizontalOptions="Center" />

            <Entry x:Name="entryNome"
                   Placeholder="Nome completo"
                   BackgroundColor="#EAEDED"
                   TextColor="Black" />

            <Entry x:Name="entryDias"
                   Placeholder="Quantidade de dias"
                   Keyboard="Numeric"
                   BackgroundColor="#EAEDED"
                   TextColor="Black" />

            <Picker x:Name="pickerQuarto"
                    Title="Selecione o tipo de quarto"
                    BackgroundColor="#EAEDED"
                    TextColor="Black">
                <Picker.Items>
                    <x:String>Standard - R$200/noite</x:String>
                    <x:String>Luxo - R$350/noite</x:String>
                    <x:String>Presidencial - R$500/noite</x:String>
                </Picker.Items>
            </Picker>

            <Button Text="Confirmar Hospedagem"
                    BackgroundColor="#1F618D"
                    TextColor="White"
                    CornerRadius="20"
                    Clicked="ConfirmarHospedagem_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
