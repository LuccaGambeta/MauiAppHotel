<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="Resumo da Hospedagem">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Resumo da Contratação"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label x:Name="lblNome" FontSize="18" />
        <Label x:Name="lblQuarto" FontSize="18" />
        <Label x:Name="lblDias" FontSize="18" />
        <Label x:Name="lblTotal" FontSize="18" FontAttributes="Bold" TextColor="Green" />

        <Button Text="Voltar" BackgroundColor="#512BD4" TextColor="White" CornerRadius="15" Clicked="Voltar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
